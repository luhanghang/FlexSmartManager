<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="256" height="350" buttonMode="true" mouseChildren="false" useHandCursor="true">
	<mx:Script>
		<![CDATA[
			[Bindable]
			public var img:String;
			
			[Bindable]
			public var name_:String;
			
			[Bindable]
			public var desc:String;
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%" verticalGap="15">
		<mx:Canvas width="100%" height="300" backgroundImage="assets/{img}" backgroundSize="100%" 
	dropShadowEnabled="true" shadowDistance="10" shadowDirection="right" styleName="lb"/>
		<mx:Canvas width="100%">
			<mx:Canvas horizontalCenter="0" styleName="lt">
				<mx:Label text="{name_}" color="#ffffff" left="10" right="10"/>
			</mx:Canvas>
		</mx:Canvas>
	</mx:VBox>
</mx:Canvas>
